{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "mbt:internal/app": [
        "./target/js/release/build/app.js"
      ],
      "mbt:internal/app/embed": [
        "./target/js/release/build/embed/embed.js"
      ],
      "mbt:internal/app/webcomponent": [
        "./target/js/release/build/webcomponent/webcomponent.js"
      ],
      "mbt:internal/app/preview": [
        "./target/js/release/build/preview/preview.js"
      ]
    }
  },
  "include": [
    "*.ts",
    "types/**/*.d.ts"
  ]
}
